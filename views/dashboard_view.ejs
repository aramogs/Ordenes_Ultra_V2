<% include header %>
<% include sidebar %>
<% include navbar %>


<!-- Contenedor Principal -->
<div class="col-md-10 col-lg-10-2 col-xl-11">
    <div class="row">
        <div class="box-header col-lg-1">
            <h3 class="box-title">Ordenes</h3>
        </div>
    </div>


    <!-- Tarjetas -->
    <!-- Ordenes Atendidas -->
    <div class="row">
        <div class="animated fadeInLeft fast col-xl-4 col-md-6 mb-4">
            <div class="Card border-left-atendidas shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-8">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Atendidas</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800"><%=data.ordenesAtendidas%>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ordenes Abiertas -->
        <div class="animated fadeInLeft fast cdelay-1 col-xl-4 col-md-6 mb-4">
            <div class="card border-left-abiertas shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-8">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Abiertas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%=data.ordenesAbiertas%></div>
                        </div>
                        <div class="col-auto">
                            <i class="far fa-clipboard fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ordenes Cerradas -->
        <div class="animated fadeInLeft fast cdelay-2 col-xl-4 col-md-6 mb-4">
            <div class="card border-left-cerradas shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-8">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Cerradas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%=data.ordenesCerradas%></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Tarjetas -->

        <!-- Graficas -->
    <div class="horizontalBar">
        <div class="col-lg-12 mt-10">

            <div class="card " style="width: 100%; height: 200px;">
                <div class="card-header text-center text-white bg-secondary"><%=data.ordenesDepartamento%>: <%=data.selectedMonth%>-<%=data.selectedYear %></div>
                <div class="card-body">
                    <canvas class="" id="chartMant1" width="100" height="15"></canvas>
                </div>
            </div>
        </div>
        <div class="horizontalBar">
                <div class="col-lg-12 mt-10">
        
                    <div class="card " style="width: 100%; height: 200px;">
                        <div class="card-header text-center text-white bg-secondary"><%=data.ordenesDepartamento%>: <%=data.selectedMonth%>-<%=data.selectedYear %></div>
                        <div class="card-body">
                            <canvas class="" id="chartMant2" width="100" height="15"></canvas>
                        </div>
                    </div>
                </div>
        <!-- /Graficas -->

<!-- Pruebas -->
  
<div class="table table-responsive mt-10" id="table">
    <table id="myTable" class="table table-bordered table-striped">
        <thead class="thead-dark">

            <th>Maquina</th>
            <th>Total problemas</th>
            <th>Tiempo muerto Minutos</th>
 
        </thead>

        <tbody>
            <tr>
                <% for(var i = 0; i < data.ordenesSeleccionadas.length;i++ ){ %>
                <td><%= data.ordenesSeleccionadas[i].maquina %></td>
                <td><%= data.ordenesSeleccionadas[i].parte_afectada_count %></td>
                <td><%= Math.floor(data.ordenesSeleccionadas[i].tiempo_muerto / 60); %></td>
                
            </tr>
                <% }; %>
        </tbody>
    </table>
</div>

<!-- Pruebas -->

    </div>
    <!--/ Contenedor Principal  -->
</div>
<% include footer %>

